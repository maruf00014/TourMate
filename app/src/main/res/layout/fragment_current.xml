<?xml version="1.0" encoding="utf-8"?>

<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cityTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/darkGray"
                android:textSize="30.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTimeTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/darkGray"
                android:textSize="18.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconIV"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="10.0dip" />

                <TextView
                    android:id="@+id/tempTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/darkGray"
                    android:textSize="50.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Humidity: "
                    android:textColor="@color/darkGray"
                    android:textSize="20.0sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/humadityTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="20.0sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunrise : "
                    android:textColor="@color/darkGray"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@+id/sunriseTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20.0dip"
                    android:textColor="@color/darkGray"
                    android:textSize="18.0dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="| Sunset : "
                    android:textColor="@color/darkGray"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@+id/sunsetTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGray"
                    android:textSize="18.0dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip"
                android:text="Hourly"
                android:textColor="@color/darkGray"
                android:textSize="20.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ff696969" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="120.0dip"
                android:orientation="horizontal"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:weightSum="4.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hourtempTV1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />

                    <ImageView
                        android:id="@+id/hourIcon1"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/hourTime1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="80.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="#ff696969" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hourtempTV2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />

                    <ImageView
                        android:id="@+id/hourIcon2"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/hourTime2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="80.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="#ff696969" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hourtempTV3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />

                    <ImageView
                        android:id="@+id/hourIcon3"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/hourTime3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="80.0dip"
                    android:layout_gravity="center_vertical"
                    android:background="#ff696969" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hourtempTV4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />

                    <ImageView
                        android:id="@+id/hourIcon4"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/hourTime4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkGray"
                        android:textSize="18.0dip" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ff696969" />
        </LinearLayout>
    </LinearLayout>



</layout>
